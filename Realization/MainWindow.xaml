                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Stroke="{DynamicResource ModuleTitleBackground}" StrokeThickness="3" Fill="White"/>
